# Redireciona todas as requisições internamente para public/
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Se acessar /public/ diretamente na URL, redireciona para a raiz SEM mostrar /public
    RewriteCond %{THE_REQUEST} ^[A-Z]+\ /public/
    RewriteRule ^public/(.*)$ /$1 [R=301,L]
    
    # Redireciona INTERNAMENTE para public/ (não aparece na URL)
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Bloqueia acesso a arquivos sensíveis
<FilesMatch "^\.env|^\.git|composer\.(json|lock)|package\.json|README\.md">
    Order allow,deny
    Deny from all
</FilesMatch>

# Impede listagem de diretórios
Options -Indexes

